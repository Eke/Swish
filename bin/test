#!/usr/bin/env sh

set -o pipefail

xcrun xcodebuild \
  -workspace Swish.xcworkspace \
  -scheme Swish-Mac \
  test \
  | xcpretty --color

xcrun xcodebuild \
  -workspace Swish.xcworkspace \
  -scheme Swish-iOS \
  -destination "platform=iOS Simulator,name=iPhone 6" \
  test \
  | xcpretty --color
